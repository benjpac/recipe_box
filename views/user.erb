<div class="row">
  <div class="col-md-6">
    <h5>My Recipes</h5>
    <ul>
      <% @user.recipes().each() do |recipe| %>
        <li><a href="/user/<%= @user.id() %>/recipe/<%= recipe.id() %>"><%= recipe.name() %></a></li>
      <% end %>
    </ul>
    <br>
    <form class="form-group" action="/user/<%= @user.id() %>/recipe/edit" method="post">
      <label for="name">Recipe Name</label>
      <input type="text" name="name">
      <button class="waves-effect waves-light btn" type="submit">Add your own recipe</button>
    </form>
  </div>
  <div class="col-md-6">
    <h5>Search Recipes</h5>

  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-6">
    <h5>My Favorites</h5>

  </div>
  <div class="col-md-6">
    <form class="form-group" action="/recipe/new" method="post">
      <button class="waves-effect waves-light btn" type="submit">Sort by rating</button>
    </form>
    <form class="form-group" action="/recipe/new" method="post">
      <button class="waves-effect waves-light btn" type="submit">Sort by added date</button>
    </form>
    <form class="form-group" action="/recipe/new" method="post">
      <button class="waves-effect waves-light btn" type="submit">Sort alphabetically</button>
    </form>
  </div>
</div>
