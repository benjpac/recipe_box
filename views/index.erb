<div class="col-md-6">
  <h5>Users</h5>
  <ul>
    <% @users.each() do |user| %>
      <li><a href="/user/<%= user.id()%>"><%= user.name() %></a></li>
    <% end %>
  </ul>
</div>
<div class="col-md-6">
  <h5>New User</h5>
  <form class="form-group" action="/user" method="post">
    <input type="text" name="name">
    <button class="waves-effect waves-light btn" type="submit">Add User</button>
  </form>
</div>
