<div class="row">
  <div class="col-md-12">
    <h3><a href="/user/<%= @user.id() %>/recipe/<%= @recipe.id() %>/edit"><%= @recipe.name() %></a></h3>
    <h5><%= @ingredient.name() %></h5>
    <form class="form-group" action="/user/<%= @user.id() %>/recipe/<%= @recipe.id() %>/ingredient/<%= @ingredient.id() %>/edit" method="post">
      <input type="hidden" name="_method" value="patch">
      <label for="name">Ingredient Name</label>
      <input type="text" name="name">
      <button class="waves-effect waves-light btn" type="submit">Edit Ingredient</button>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <form class="form-group" action="/user/<%= @user.id() %>/recipe/<%= @recipe.id() %>/ingredient/<%= @ingredient.id() %>/delete" method="post">
      <input type="hidden" name="_method" value="delete">
      <button class="waves-effect waves-light btn" id="delete" type="submit">Delete Ingredient</button>
    </form>
  </div>
</div>
